<!--pages/send/send.wxml-->
 
<view>


<view class="title"> 上传发货单 </view>
 
<view class="progress-box">
  <van-progress
    percentage="{{ progress }}"
    pivot-text="{{ progress_desc }}"
    stroke-width="18"
    pivot-color="#7232dd"
    color="linear-gradient(to right, #be99ff, #7232dd)"
  />

  <van-steps steps="{{ steps }}" active="{{ active }}" />

</view> 

<!-- 指向微信公众平台首页的web-view -->
<!-- <web-view src="https://mp.weixin.qq.com/"></web-view> -->


<view class="files">
{{excel}} 
  <!-- <button bindtap="upload">请选择Excel文件</button> -->
  <van-button type="primary" bindtap="upload">{{ select_desc }}</van-button>
</view>


<view class="pics">
  {{pics}} 
  <!-- <button bindtap="upload">上传图片（最多4张）</button> -->
  <van-uploader 
      file-list="{{ fileList }}" 
      accept="image"
      use-before-read
      bind:before-read="beforeRead"
      bind:after-read="afterRead" 
      deletable="{{ true }}" 
      max-count="4" 
  />

</view>

 


<view class="submit_view2">
  <van-button type="default"  >发 货</van-button>
</view>

</view>